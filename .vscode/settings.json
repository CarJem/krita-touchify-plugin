{
    "files.exclude": {
        ".vscode\\PythonImportHelper-v2-Completion.json": true,
        "**/__pycache__": true,
        "**/.venv": true,
        "**/.conda": true
    },
    "python.analysis.extraPaths": [    
        "/var/lib/flatpak/app/org.kde.krita/current/active/files/lib/krita-python-libs",
        "~/.var/app/org.kde.krita/data/krita/pykrita"
    ],
    "python.analysis.fixAll" : ["source.unusedImports", "source.convertImportFormat"],
    "python.REPL.enableREPLSmartSend": false,
    "python.analysis.importFormat": "relative",
    "python.analysis.diagnosticMode": "workspace",
    "python.analysis.indexing": true,
    "python.analysis.inlayHints.functionReturnTypes": false,
    "python.languageServer": "Default",
    "search.exclude": {
        "**/krita_env/krita": true,
        "**/testscripts": true
    },
    "editor.codeActionsOnSave": {
        "source.unusedImports": "explicit",
        "source.organizeImports": "explicit",
        "source.convertImportFormat": "explicit",
    },
    "python.analysis.autoImportCompletions": true,
    "python.analysis.diagnosticSeverityOverrides": {},
}