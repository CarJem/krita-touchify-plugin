{
    "files.exclude": {
        ".vscode\\PythonImportHelper-v2-Completion.json": true,
        "**/__pycache__": true,
        "**/.venv": true
    },
    "python.analysis.extraPaths": [    
        "~/.local/share/flatpak/app/org.kde.krita/current/active/files/lib/krita-python-libs",
        "~/.local/share/flatpak/app/org.kde.krita/current/active/files/lib/python3.11/site-packages",
        "./plugin"
    ],
    "python.defaultInterpreterPath": "python",
    "python.analysis.extraPaths.disabled": [
        "C:\\Program Files\\Krita (x64)\\lib\\krita-python-libs",
        "${workspaceFolder}/env/krita_imports",
    ],
    "python.REPL.enableREPLSmartSend": false,
    "python.envFile": "${workspaceFolder}/.venv",
    "python.analysis.importFormat": "relative",
    "python.analysis.diagnosticMode": "openFilesOnly",
    "python.analysis.indexing": true,
    "python.analysis.inlayHints.functionReturnTypes": false,
    "python.languageServer": "Default",
    "search.exclude": {
        "**/krita_env/krita": true,
        "**/testscripts": true
    },
    "python.analysis.autoImportCompletions": false
}