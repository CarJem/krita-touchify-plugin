{
    "files.exclude": {
        ".vscode\\PythonImportHelper-v2-Completion.json": true,
        "**/__pycache__": true,
        "**/.venv": true
    },
    "emeraldwalk.runonsave": {
        "commands": [
            {
                "match": ".*",
                "isAsync": true,
                "cmd": "${workspaceFolder}/dev-flatpak-install.sh"
            }
        ]
    },
    "python.analysis.extraPaths": [
        "${workspaceFolder}/krita_env"
    ],
    "python.REPL.enableREPLSmartSend": false,
    "python.envFile": "${workspaceFolder}/.venv",
    "python.analysis.importFormat": "relative"
}