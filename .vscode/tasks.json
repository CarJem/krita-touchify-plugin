{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Install Plugin",
            "type": "shell",
            "windows": {
                "command": "cmd.exe /D /C dev-windows-install.bat",
            },
            "linux": {
                "command": "./dev-flatpak-install.sh"
            },
            "presentation": {
                "reveal": "silent",
                "revealProblems": "onProblem",
                "close": true
            }
        },
        {
            "label": "Update Configs",
            "type": "shell",
            "windows": {
                "command": "cmd.exe /D /C dev-windows-update-config.bat",
            },
            "linux": {
                "command": "./dev-flatpak-update-config.sh"
            },
            "presentation": {
                "reveal": "silent",
                "revealProblems": "onProblem",
                "close": true
            }
        },
        {
            "label": "Launch Krita.COM",
            "hide": true,
            "type": "shell",
            "windows": {
                "command": "cmd.exe /D /C 'C:\\Program Files\\Krita (x64)\\bin\\krita.com'",
            },
            "linux": {
                "command": "/usr/bin/flatpak run --branch=stable --arch=x86_64 --command=krita --file-forwarding org.kde.krita @@ %F @@"
            }
        },
        {
            "label": "……………………………………………",
            "type": "shell",
            "command": "",
            "hide": true
        }
    ]
}